<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" href="~/styles.css" />
    </head>

    <body>
        <h1>My Shop</h1>

        <nav>
            <a href="https://localhost:44378/onlyavailable">ONLY AVAILABLE</a>
            <a href="https://localhost:44378/cheapestfirst">CHEAPEST FIRST</a>
            <a href="https://localhost:44378/containsnike">CONTAINS NIKE</a>
            <a href="https://localhost:44378/averagestock">AVERAGE STOCK</a>
            <a href="https://localhost:44378/mostexpensiveavailable">MOST EXPENSIVE AVAILABLE</a>
        </nav>

        <form action="/search" method="post">
            <div class="searchContainer">
                <label for="search">Search for: </label>
                <input type="search" id="search" name="search" value="@ViewData["keyword"]" placeholder="...something like nike" />
                <button type="submit">Search</button>
            </div>
        </form>

        <main>
             @RenderBody()
        </main>
    </body>
</html>
